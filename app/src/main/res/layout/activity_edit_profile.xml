<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lkh.printec.edit_profile">

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appBarLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:width="320dp"
        android:hint="Name"
        android:digits="qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM "
        android:inputType="textPersonName"
        android:textAlignment="center" />


    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:width="320dp"
        android:ems="10"
        android:hint="E mail"
        android:inputType="textEmailAddress"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:maxLength="10"
        android:width="320dp"
        android:ems="10"
        android:hint="Mobile"
        android:inputType="phone"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/hostel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mobile"
        android:layout_below="@+id/mobile"
        android:layout_marginTop="25dp"
        android:width="320dp"
        android:ems="10"
        android:hint="Hostel"
        android:inputType="number"
        android:textAlignment="center" />

    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hostel"
        android:layout_centerHorizontal="true"
        android:width="150dp"
        android:layout_marginTop="20dp"
        android:onClick="edit_user"
        android:text="SUBMIT"
        android:textSize="18sp" />

</RelativeLayout>
